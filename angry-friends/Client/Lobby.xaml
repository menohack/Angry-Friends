<UserControl x:Class="Client.Lobby"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Foreground="White">

    <Canvas x:Name="canvas" Height="308" Width="480">
        <ListBox Canvas.Left="12" Canvas.Top="74" Height="222" Name="roomlist" Width="221" SelectionChanged="room_selected" />
        <TextBlock Canvas.Left="12" Canvas.Top="50" Height="18" Name="textBlock1" Text="Rooms available" Width="221" Foreground="Black" />
        <TextBlock Canvas.Left="239" Canvas.Top="74" Foreground="Black" Height="222" Name="roominfo" Text="" Width="229" />
        <TextBlock Canvas.Left="10" Canvas.Top="10" Height="34" Name="textBlock2" Text="Angry Friends" Foreground="Black" FontSize="18" Width="142" />
        <Button Canvas.Left="148" Canvas.Top="46" Content="JOIN" Height="23" Name="joinbutton" Width="85" Click="join_room" />
        <Button Canvas.Left="148" Canvas.Top="12" Content="Create Room" Height="23" Name="button2" Width="85" Click="create_room" />
    </Canvas>

</UserControl>
